@model MarketDayAlertApp.Models.ViewModels.CreateMarketViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1 class="align-content-center text-center">Create Market</h1>

<hr />
<div class="row">
    <div class="card col-md-4 offset-4">
        <div class="card-body">
            <div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Location</label>

                        <select id="drpEmpList" class="form-control" asp-for="LocationId" name="LocationId" asp-items="@(new SelectList(ViewBag.locations,"Id","Name"))">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="LocationId" class="text-danger"></span>


                        <p class="alert-danger">@ViewBag.Message</p>


                    </div>

                   
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label">Last Date</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                        <p class="alert-danger">@ViewBag.Message</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Market Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Frequency" class="control-label">How often does the market hold?</label>
                        <input asp-for="Frequency" class="form-control" type="number" />
                        <span asp-validation-for="Frequency" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>


                </form>
            </div>
        </div>
       
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
   @* @{await Html.RenderPartialAsync("_StateDropdownPartial");}*@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
